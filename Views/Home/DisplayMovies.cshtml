@{
    ViewBag.Title = "My Movies";
}

@model IEnumerable<_413Assignment3.Models.MovieAddition>

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
    <br />

    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (_413Assignment3.Models.MovieAddition movie in Model)
            {
                @if (movie.MovieTitle != "Independence Day")
                {
                    <tr>
                        <td>@movie.Category</td>
                        <td>@movie.MovieTitle</td>
                        <td>@movie.Year</td>
                        <td>@movie.Director</td>
                        <td>@movie.Rating</td>
                        <td>@movie.Edited</td>
                        <td>@movie.LentTo</td>
                        <td>@movie.Notes</td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>
